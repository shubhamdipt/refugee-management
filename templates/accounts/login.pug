extends ./../layout.pug
block extra_css
    style.
        .alert {
            position: relative !important;
            margin: 0 0 20px 0;
        }
        #formResult {
            display: none;
        }
block content
    .container
        .row
            .col-sm-12
                h1 Login
        .row
            .col-sm-6
                form(method="POST")
                    | {% csrf_token %}
                    | {{ form|crispy }}
                    button.btn.btn-success(type="submit") Submit
        .row
            .col-sm-6
                p.help-block
                    | Are you a new user? &nbsp;
                    span
                        a(href="{% url 'frontend:home' %}") Register
