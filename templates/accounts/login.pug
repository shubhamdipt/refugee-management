extends ./../layout.pug
block content
    .container
        .row
            .col-sm-12
                h1 Login
        .row
            .col-sm-6
                form(method="POST")
                    | {% csrf_token %}
                    | {{ form|crispy }}
                    button.btn.btn-success(type="submit") Submit
        .row
            .col-sm-6
                .row
                    .col-sm-6
                        p.help-block
                            | Are you a new user? &nbsp;
                            span
                                a(href="{% url 'frontend:home' %}") Register
                    .col-sm-6.text-right
                        p.help-block
                            span
                                a(href="{% url 'accounts:password_reset' %}") Forgot password
